{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": "container",
  "data": {
    "url": "data/product-services.csv",
    "format": {"type": "csv"}
  },
  "mark": {
    "type": "arc",
    "tooltip": true
  },
  "encoding": {
    "theta": {
      "field": "Share (%)",
      "type": "quantitative",
      "stack": true
    },
    "color": {
      "field": "Product or service",
      "type": "nominal",
      "legend": {"title": "Product or Service"}
    }
  }
}
