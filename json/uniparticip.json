{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 900,
  "height": 360,
  "data": { "url": "data/figure-6-indicative-tren.csv" },
  "transform": [
    { "fold": ["Age 18", "Age 19"], "as": ["Age Group", "Value"] }
  ],
  "layer": [
    {
      "mark": { "type": "line", "point": true, "strokeWidth": 2 },
      "encoding": {
        "x": { "field": "Year", "type": "ordinal", "title": "Year" },
        "y": {
          "field": "Value",
          "type": "quantitative",
          "title": "Value",
          "scale": {"domain": [35, 50]},
          "axis": { "format": ".1f" }
        },
        "color": {
          "field": "Age Group",
          "type": "nominal",
          "title": "Age Group"
        },
        "tooltip": [
          { "field": "Year", "type": "quantitative", "title": "Year" },
          { "field": "Age Group", "type": "nominal", "title": "Age" },
          { "field": "Value", "type": "quantitative", "title": "Value", "format": ".1f" }
        ]
      }
    }
  ],
  "config": {
    "axis": { "labelFontSize": 12, "titleFontSize": 12 }
  }
}